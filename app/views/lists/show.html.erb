<div class="page-frame-content">
    <div class="page-frame-header">
<h1><%= @list.name %></h1>
<%= link_to 'Back to home', root_path, class: "btn btn_success" %>
<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn_primary' %>
    </div>
    <div class="page-frame-body">
    </div>

<ul>
<% @list.bookmarks.each do |bookmark|%>
  <div class="card-product">
    <%= image_tag "#{bookmark.movie.poster_url}" %>
    <div class="card-product-info">
      <h2> <%= bookmark.movie.title %></h2>
      <p> <%= bookmark.movie.rating%></p>
      <p> <%= bookmark.movie.overview%></p>
    </div>
  </div>
<% end %>
</ul>

    <div class="page-frame-footer">
    </div>
  </div>
